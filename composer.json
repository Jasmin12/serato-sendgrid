{
	"name": "serato/sendgrid",
	"homepage": "https://github.com/serato/serato-sendgrid",
	"description": "A library for sending transactional emails using SendGrid",
	"type": "library",
	"require": {
		"php" : ">=7.1",
		"sendgrid/sendgrid": "~7"

	},
	"require-dev": {
		"phpunit/phpunit": "~8.0",
		"phpstan/phpstan-phpunit": "^0.11.0",
		"squizlabs/php_codesniffer": "~3.0"
	},
	"autoload": {
		"psr-4": {
			"Serato\\SendGrid\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Serato\\SendGrid\\Test\\": "tests/"
		}
	}
}